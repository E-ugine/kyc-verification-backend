# Add common Python gitignore patterns
cat > .gitignore << 'EOF'
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg

# Environment variables
.env
.env.local

# Database
*.db
*.sqlite3

# IDE
.vscode/
.idea/
*.swp
*.swo

# Media uploads (keep structure but ignore files)
media/selfies/*
media/id_docs/*
!media/selfies/.gitkeep
!media/id_docs/.gitkeep

# Logs
*.log
logs/
EOF